<Window x:Class="SteamAccountSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        mc:Ignorable="d" Height="250" Width="300" ResizeMode="NoResize" Title="Steam Account Switcher"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing"
        Icon="steam.ico">
	<Grid>
		<StackPanel x:Name="stackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
		<Button x:Name="btnNewAccount" Content="New Account" HorizontalAlignment="Left" VerticalAlignment="Bottom"
		        Height="23" Width="80" Click="btnNewAccount_Click" Margin="10,0,0,10" />
		<Button x:Name="btnAddAccount" Content="Add Account" HorizontalAlignment="Right" VerticalAlignment="Bottom"
		        Height="23" Width="80" Click="btnAddAccount_Click" Margin="0,0,10,10" />
	</Grid>
</Window>