<Window x:Class="SteamAccountSwitcher.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:p="clr-namespace:SteamAccountSwitcher.Properties"
        mc:Ignorable="d"
        Title="Options" SizeToContent="Height" Width="350" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid IsSharedSizeScope="True" Margin="15,10,15,10" Grid.Row="0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="31" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
                <RowDefinition Height="Auto" SharedSizeGroup="options" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Margin" Value="0,5,10,5" />
                    <Setter Property="Padding" Value="0" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="Height" Value="23" />
                </Style>
                <Style TargetType="xctk:ColorPicker">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="Height" Value="Auto" />
                </Style>
                <Style TargetType="CheckBox">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </Grid.Resources>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Always-On Mode:" />
            <CheckBox Grid.Row="0" Grid.Column="1"
                      IsChecked="{Binding Source={x:Static p:Settings.Default},
                               Path=AlwaysOn, Mode=TwoWay}" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Check For Updates:" />
            <CheckBox Grid.Row="1" Grid.Column="1"
                      IsChecked="{Binding Source={x:Static p:Settings.Default},
                               Path=CheckForUpdates, Mode=TwoWay}" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Silent Auto-Update:" />
            <CheckBox Grid.Row="2" Grid.Column="1"
                      IsChecked="{Binding Source={x:Static p:Settings.Default},
                               Path=AutoUpdate, Mode=TwoWay}" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Window Width:" />
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding Source={x:Static p:Settings.Default},
                               Path=Width, Mode=TwoWay}" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Button Height" />
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding Source={x:Static p:Settings.Default},
                               Path=ButtonHeight, Mode=TwoWay}" />

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Steam.exe Path:" />
            <TextBox Grid.Row="5" Grid.Column="1"
                     Text="{Binding Source={x:Static p:Settings.Default},
                               Path=SteamPath, Mode=TwoWay}" />

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Default Button Color:" />
            <xctk:ColorPicker Grid.Row="6" Grid.Column="1"
                              SelectedColor="{Binding Source={x:Static p:Settings.Default},
                               Path=ButtonDefaultColor, Mode=TwoWay}" />

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Button Text Color:" />
            <xctk:ColorPicker Grid.Row="7" Grid.Column="1"
                              SelectedColor="{Binding Source={x:Static p:Settings.Default},
                               Path=ButtonTextColor, Mode=TwoWay}" />


        </Grid>
        
        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="lblVersion" FontSize="8" HorizontalAlignment="Right" Margin="5"/>

        <Button Grid.Row="2" Grid.Column="0" x:Name="btnExtra" Click="btnExtra_Click" Width="28" Height="24"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,0,0,15">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="menuItemDefaults" Header="Defaults..." Click="menuItemDefaults_OnClick" />
                    <Separator />
                    <MenuItem x:Name="menuItemImport" Header="Import Accounts..." Click="menuItemImport_OnClick" />
                    <MenuItem x:Name="menuItemExport" Header="Export Accounts..." Click="menuItemExport_OnClick" />
                    <Separator />
                    <MenuItem x:Name="menuItemAdvanced" Header="Advanced..." Click="menuItemAdvanced_OnClick" />
                </ContextMenu>
            </Button.ContextMenu>
            <Image Source="Resources/menu.png" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" />
        </Button>

        <Grid Grid.Row="2" Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>

            <Button Grid.Column="2" x:Name="btnOK" Content="OK" Click="btnOK_Click" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" IsDefault="True" />
            <Button Grid.Column="4" x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsCancel="True" />
        </Grid>
    </Grid>
</Window>