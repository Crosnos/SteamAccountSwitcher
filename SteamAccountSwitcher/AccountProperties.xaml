<Window x:Class="SteamAccountSwitcher.AccountProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" Title="Account Properties" SizeToContent="Height" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style>
        </Grid.Resources>

        <Label Grid.Row="1" Grid.Column="1" x:Name="lblDisplayName" Content="Alias:" />
        <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtDisplayName" HorizontalAlignment="Stretch"
                 VerticalAlignment="Center" Height="23" Text="{Binding Path=DisplayName, Mode=TwoWay}" />
        <Label Grid.Row="2" Grid.Column="1" x:Name="lblUsername" Content="Username:" />
        <TextBox Grid.Row="2" Grid.Column="3" x:Name="txtUsername" HorizontalAlignment="Stretch" Height="23"
                 VerticalAlignment="Center" Text="{Binding Path=Username, Mode=TwoWay}" />
        <Label Grid.Row="3" Grid.Column="1" x:Name="lblPassword" Content="Password:" />
        <Grid Grid.Row="3" Grid.Column="3" Height="23" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBox x:Name="txtPasswordText" GotFocus="txtPasswordText_GotFocus" Visibility="Hidden"
                     Text="{Binding Path=Password, Mode=TwoWay}" />
            <PasswordBox x:Name="txtPassword" GotFocus="txtPassword_GotFocus"
                         PasswordChanged="txtPassword_OnPasswordChanged" />
            <CheckBox x:Name="chkShowPassword" HorizontalAlignment="Right" VerticalAlignment="Center"
                      Checked="chkShowPassword_Checked" Unchecked="chkShowPassword_Unchecked"
                      KeyboardNavigation.IsTabStop="False" Margin="0,4,4,4" VerticalContentAlignment="Center"
                      HorizontalContentAlignment="Center" />
        </Grid>
        <Label Grid.Row="4" Grid.Column="1" x:Name="lblColor" Content="Color:" />
        <xctk:ColorPicker Grid.Row="4" Grid.Column="3" x:Name="txtColor" HorizontalAlignment="Stretch"
                          VerticalAlignment="Center" Height="23" SelectedColor="{Binding Path=Color, Mode=TwoWay}" />

        <Grid Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>

            <Button Grid.Column="1" x:Name="btnOK" Content="OK" Click="btnOK_Click" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" IsDefault="True" />
            <Button Grid.Column="3" x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsCancel="True" />
        </Grid>
    </Grid>
</Window>