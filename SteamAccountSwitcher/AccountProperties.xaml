<Window x:Class="SteamAccountSwitcher.AccountProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Account Properties" SizeToContent="Height" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Grid.Resources>

        <Label Grid.Row="1" Grid.Column="1" x:Name="lblDisplayName" Content="Display Name:" HorizontalAlignment="Left" />
        <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtDisplayName" HorizontalAlignment="Stretch"
                 VerticalAlignment="Center" Height="23" />

        <Label Grid.Row="2" Grid.Column="1" x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" />
        <TextBox Grid.Row="2" Grid.Column="3" x:Name="txtUsername" HorizontalAlignment="Stretch"
                 VerticalAlignment="Center" Height="23" />

        <Label Grid.Row="3" Grid.Column="1" x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" />
        <TextBox Grid.Row="3" Grid.Column="3" x:Name="txtPasswordText" HorizontalAlignment="Stretch"
                 VerticalAlignment="Center" Height="23"
                 GotFocus="txtPasswordText_GotFocus" />
        <PasswordBox Grid.Row="3" Grid.Column="3" x:Name="txtPassword" HorizontalAlignment="Stretch"
                     VerticalAlignment="Center" Height="23"
                     GotFocus="txtPassword_GotFocus" />
        <CheckBox Grid.Row="3" Grid.Column="3" x:Name="chkShowPassword" Visibility="Visible"
                  HorizontalAlignment="Right"
                  Checked="chkShowPassword_Checked" Unchecked="chkShowPassword_Unchecked"
                  KeyboardNavigation.IsTabStop="False" Margin="0,9,4,9" />

        <Label Grid.Row="4" Grid.Column="1" x:Name="lblColor" Content="Color:" HorizontalAlignment="Left" />
        <xctk:ColorPicker Grid.Row="4" Grid.Column="3" x:Name="txtColor" HorizontalAlignment="Stretch"
                          VerticalAlignment="Center" Height="23" />

        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" x:Name="btnOK" Content="OK" Width="75"
                IsDefault="True"
                Click="btnOK_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="23" />

    </Grid>
</Window>