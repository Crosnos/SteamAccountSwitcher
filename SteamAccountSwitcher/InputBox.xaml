<Window x:Class="SteamAccountSwitcher.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        mc:Ignorable="d"
        Height="400" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" x:Name="txtData" HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch" Margin="15" TextWrapping="Wrap" />

        <Button Grid.Column="1" Grid.Row="1" x:Name="btnOK" Content="OK" Margin="0,0,15,15" Width="75" Height="23"
                IsDefault="True"
                Click="btnOK_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </Grid>
</Window>