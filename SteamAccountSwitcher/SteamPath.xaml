<Window x:Class="SteamAccountSwitcher.SteamPath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        mc:Ignorable="d"
        Title="Find Steam Path" Height="110" Width="283" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="212" />
        <Button x:Name="btnOK" Content="OK" Margin="0,0,10,10" Width="75" Height="23" IsDefault="True"
                Click="btnOK_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        <Button x:Name="btnBrowse" Content="..." HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top"
                Width="30" Height="23" Click="btnBrowse_Click" />

    </Grid>
</Window>